<Page
    x:Class="Teacher.Views.AffinisTransformations.AffinisTransformationsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Teacher.Views.AffinisTransformations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:xaml="using:Microsoft.Graphics.Canvas.UI.Xaml"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.4*"/>
        </Grid.ColumnDefinitions>

        <StackPanel x:Name="TrapezeSettings"
                    Grid.Column="1" 
                    Grid.Row="0" 
                    Margin="0,25,25,0"
                    Spacing="15"/>
        <Border
            Grid.Row="0" Grid.Column="0" 
            Margin="25 25 25 10"
            BorderThickness="1"
            BorderBrush="{ThemeResource TextBoxBorderThemeBrush}">
            <RelativePanel
                                              x:Name="CanvasPanel">

                <xaml:CanvasControl 
                                                      Name="FractalCanvas" 
                                                      PointerWheelChanged="FractalCanvas_OnPointerWheelChanged"
                                                      Draw="FractalCanvas_OnDraw"
                                                      HorizontalAlignment="Stretch"
                                                      VerticalAlignment="Stretch"
                                                      RelativePanel.AlignBottomWithPanel="True"
                                                      RelativePanel.AlignTopWithPanel="True"
                                                      RelativePanel.AlignLeftWithPanel="True"
                                                      RelativePanel.AlignRightWithPanel="True"/>
                <Rectangle 
                x:Name="Background"
                Visibility="{Binding ElementName=FractalsPageName, Path=ViewModel.IsRendering, Converter={StaticResource BoolToVisibility}}"
                RelativePanel.Above="FractalCanvas"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignTopWithPanel="True"
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignRightWithPanel="True">
                    <Rectangle.Fill>
                        <SolidColorBrush Color="Black" Opacity="0.3"/>
                    </Rectangle.Fill>
                </Rectangle>

                <controls:ProgressRing
            IsActive="{Binding ElementName=FractalsPageName, Path=ViewModel.IsRendering}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="130"
            Height="130"
            RelativePanel.AlignHorizontalCenterWith="FractalCanvas"
            RelativePanel.AlignVerticalCenterWith="FractalCanvas"
            RelativePanel.Above="Background"/>
            </RelativePanel>
        </Border>

        <StackPanel 
            Grid.Column="0" 
            Grid.Row="1" 
            Orientation="Horizontal" 
            HorizontalAlignment="Center" 
            Margin="0,0,0,10">
            <Button 
                Name="RestoreBtn" 
                Click="RestoreBtn_OnClick" 
                Background="Transparent" 
                Margin="0,0,30,0">
                <FontIcon 
                    FontFamily="Segoe MDL2 Assets" 
                    Glyph="&#xE777;" Width="32" 
                    Height="32"/>
            </Button>
            <Button 
                Name="RotateMinusBtn"  
                Click="RotateMinus_Click" 
                Background="Transparent">
                <FontIcon 
                    FontFamily="Segoe MDL2 Assets" 
                    Glyph="&#xE80C;"  
                    Width="32" 
                    Height="32"/>
            </Button>
            <Button 
                Name="RotatePlusBtn"  
                Click="RotatePlus_Click" 
                Background="Transparent" 
                Margin="0,0,30,0">
                <FontIcon 
                    FontFamily="Segoe MDL2 Assets" 
                    Glyph="&#xE80D;"  
                    Width="32" 
                    Height="32"/>
            </Button>
            <Button 
                Name="ZoomInBtn" 
                Click="ZoomIn_Click" 
                Background="Transparent">
                <FontIcon 
                    FontFamily="Segoe MDL2 Assets" 
                    Glyph="&#xE8A3;" 
                    Width="32" 
                    Height="32"/>
            </Button>
            <Button 
                Name="ZoomOutBtn" 
                Click="ZoomOutBtn_OnClick" 
                Background="Transparent" 
                Margin="0,0,30,0">
                <FontIcon 
                    FontFamily="Segoe MDL2 Assets" 
                    Glyph="&#xE71F;" Width="32" 
                    Height="32"/>
            </Button>
            <Button 
                Name="MoveLeftBtn" 
                Click="MoveLeftBtn_OnClick"
                Background="Transparent">
                <FontIcon
                    FontFamily="Segoe MDL2 Assets" 
                    Glyph="&#xE76B;" 
                    Width="32" 
                    Height="32"/>
            </Button>
            <Button 
                Name="MoveUpBtn" 
                Click="MoveUpBtn_OnClick" 
                Background="Transparent">
                <FontIcon 
                    FontFamily="Segoe MDL2 Assets" 
                    Glyph="&#xE70E;" 
                    Width="32" 
                    Height="32"/>
            </Button>
            <Button 
                Name="MoveRightBtn" 
                Click="MoveRightBtn_OnClick" 
                Background="Transparent">
                <FontIcon 
                    FontFamily="Segoe MDL2 Assets" 
                    Glyph="&#xE76C;" 
                    Width="32" 
                    Height="32"/>
            </Button>
            <Button 
                Name="MoveDownBtn" 
                Click="MoveDownBtn_OnClick" 
                Background="Transparent">
                <FontIcon
                    FontFamily="Segoe MDL2 Assets" 
                    Glyph="&#xE70D;" 
                    Width="32" 
                    Height="32"/>
            </Button>
        </StackPanel>

        <Button 
            Grid.Column="0" 
            Grid.Row="1" 
            HorizontalAlignment="Right" 
            Margin="0,0,25,10" 
            Padding="15 0" 
            Click="SaveAs_OnClick">
            <StackPanel 
                Orientation="Horizontal" 
                HorizontalAlignment="Center">
                <FontIcon 
                    FontFamily="Segoe MDL2 Assets" 
                    Glyph="&#xE792;" 
                    Width="32"
                    Height="32"/>
                <TextBlock 
                    x:Uid="SaveAsButtonLabel" 
                    VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

    </Grid>
</Page>
